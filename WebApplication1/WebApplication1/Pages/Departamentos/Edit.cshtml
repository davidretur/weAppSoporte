@page
@model WebAppInventarioS.Pages.Departamentos.EditModel
@{
	ViewData["Title"] = "Editar Departamento";
}
<h1>Editar Departamento</h1>
<div class="d-flex justify-content-center mt-5">
    <form method="post" class="w-50">
    <input type="hidden" asp-for="Departamento.IdDepartamento" />
    <div class="form-group">
            <label asp-for="Departamento.NombreDepartamento">Nombre Departamento</label>
        <input asp-for="Departamento.NombreDepartamento" class="form-control" />
        <span asp-validation-for="Departamento.NombreDepartamento" class="text-danger"></span>
    </div>
        <div class="form-group">
            <label asp-for="Departamento.Status"></label>
            <select asp-for="Departamento.Status" class="form-control">
                <option value="true">Activo</option>
                <option value="false">Inactivo</option>
            </select>
            <span asp-validation-for="Departamento.Status" class="text-danger"></span>
        </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
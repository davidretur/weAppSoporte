@page
@model WebAppInventarioS.Pages.Usuarios.IndexModel
@{
	ViewData["Title"] = "Lista Usuario";
}
<h1>Lista de Usuarios</h1>
<table class="table">
    <thead>
        <tr>
			<th>Nombre Completo</th>
			<th>Puesto</th>
            <th>Usuario Sesion</th>
            <th>IdRol</th>
            <th>Status</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
        {
            <tr>
                <td>@usuario.NombreCompleto</td>
                <td>@usuario.Puesto</td>
                <td>@usuario.UsuarioSesion</td>
                <td>@usuario.NombreRol</td>
                <td>@(usuario.Status == true ? "activo" : "inactivo")</td>
                <td>
                    <a class="btn btn-dark" asp-page="./Details" asp-route-id="@usuario.IdUsuario">Detalles</a> 
                    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@usuario.IdUsuario">Editar</a> 
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@usuario.IdUsuario">Baja</a>
                    <a class="btn btn-secondary" asp-page="./Contracena" asp-route-id="@usuario.IdUsuario">Contraceña</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a class="btn btn-primary" asp-page="./Create">Crear Nuevo Empleado</a>
</p>
